<h1>Authors List</h1>
<ul>
    <table>
        <thead>
        <tr>
            <td>Nombre</td>
            <td>Apellidos</td>
            <td>Acciones</td>
        </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td><a href="{{ path('show_author', {'id':author.id}) }}">{{ author.name }}</a></td>
                <td>{{ author.surname }}</td>
                <td><a href="{{ path('edit_author', {'id':author.id}) }}">Edit</a> - <a href="{{ path('delete_author', {'id':author.id}) }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</ul>